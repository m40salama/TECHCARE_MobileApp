<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontpro.Pages.ForgetPassword"
             Title="ForgetPassword">
    <VerticalStackLayout Padding="20">
        <Label Text="Forget Password" FontSize="20" HorizontalOptions="Center"/>
        <Entry Placeholder="Email" x:Name="EmailEntry" Keyboard="Email"/>
        <Button Text="Reset Password" Clicked="ResetPasswordButton_Clicked"/>
    </VerticalStackLayout>
</ContentPage>