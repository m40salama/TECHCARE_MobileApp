<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="frontpro.Pages.ynallg"
             Title="ynallg"
    BackgroundColor="White">
    <StackLayout Padding="20">
        <Label Text="Do you suffer from any allergies?" HorizontalOptions="Center" VerticalOptions="CenterAndExpand" />
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="Yes" Clicked="YesButton_Clicked" />
            <Button Text="No" Clicked="NoButton_Clicked" />
        </StackLayout>
    </StackLayout>
</ContentPage>